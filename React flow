const edges = [
  { id: 'e1-3', source: '1', target: '3', animated: true, style: { stroke: '#4a90e2' } },
  { id: 'e2-3', source: '2', target: '3', animated: true, style: { stroke: '#7ed321' } },
  { id: 'e3-4', source: '3', target: '4', animated: true, style: { stroke: '#f5a623' } },
];

function FlowCanvas() {
  return (
    <div className="flow-wrapper">
